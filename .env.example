# Better Auth secret key - Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=

# Better Auth URL - Your application URL
BETTER_AUTH_URL=http://localhost:3000

# Database connection string
DATABASE_URL=

# Storage provider: "local" or "s3" (default: local)
# - local: Files stored in /public/uploads/ (no AWS credentials required)
# - s3: Files stored in AWS S3 with CloudFront CDN (requires AWS configuration below)
STORAGE_PROVIDER=local

# AWS S3 Configuration (required only if STORAGE_PROVIDER=s3)
AWS_REGION=eu-north-1
AWS_S3_BUCKET=kvitty-se
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
CLOUDFRONT_DOMAIN=

# UseSend API key for email sending
USESEND_API_KEY=

# UseSend URL for email sending
USESEND_URL=

# Public application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Email sender address
EMAIL_FROM=

# Groq API key for AI features
GROQ_API_KEY=

# Encryption key for sensitive data - Generate with: openssl rand -base64 32
ENCRYPTION_KEY=

# Google OAuth client ID
GOOGLE_CLIENT_ID=

# Google OAuth client secret
GOOGLE_CLIENT_SECRET=

# Enable Google SSO (set to "true" to show Google login button)
NEXT_PUBLIC_GOOGLE_SSO=

# Enable new user registrations (set to "false" to disable general signups)
# Note: Users with pending workspace invitations can still register when disabled
NEXT_PUBLIC_REGISTRATIONS_ENABLED=true
